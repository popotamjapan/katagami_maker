{
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "semi": false
      }
    ],
    "ter-indent": [true, 2]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]  
  }
}
